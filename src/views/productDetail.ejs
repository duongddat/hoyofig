<%- include('layout/header.ejs'); -%>
    <div class="full-witch container">
        <div class=" container-product">
            <div class="title-header">
                <h4>Product detail page</h4>
            </div>
            <div class="row product-detail">
                <div class="col-md-12 col-lg-6 zoom">
                    <% if (product.image) {%>
                        <img class="product-img" src="/img/<%= product.image %>" alt="Product image">
                        <img id="imgZoom" class="product-img" src="/img/<%= product.image %>" alt="Product image">
                        <%} else {%>
                            <img class="product-img" src="/img/none-image.jpg" alt="Product image">
                            <img id="imgZoom" class="product-img" src="/img/none-image.jpg" alt="Product image">
                            <%}%>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="product-desc">
                        <div class="product-title">
                            <h1>
                                <%= product.title %>
                            </h1>
                        </div>
                        <div class="product-price">
                            <span class="pro-price">Price: $<%= helper.covertPrice(product.price)%></span>
                        </div>
                        <form action="/cart/add/<%= product.id %>" method="POST" class="product-sale">
                            <div class="input-quantity">
                                <button class="btn-quantity" id="decrement"> - </button>
                                <input type="number" min="1" max="100" step="1" name="quantity" id="my-input" value="1"
                                    readonly>
                                <button class="btn-quantity" id="increment"> + </button>
                            </div>
                            <button type="submit" class="btn btn-cart">
                                <i class="fas fa-cart-shopping"></i>
                                Add to cart
                            </button>
                        </form>
                        <div class="product-deliverly">
                            <ul class="infoList-deliverly">
                                <li>
                                    <span class="lazyload"><i class="fa-solid fa-box"></i></span>
                                    <i class="fa-solid fa-check"></i>
                                    <strong>Authentic product from Japan.</strong><br>
                                    <i class="fa-solid fa-check"></i>
                                    <strong>Before you order:</strong>
                                    Please check the current price with admin, because the price may have changed
                                    compared to the last update, or out of stock, out of order. Due to quantity
                                    limitations, Japanese figures will become rarer over time, leading to an increase in
                                    prices.
                                </li>
                                <li>
                                    <span class="lazyload"><i class="fa-solid fa-truck"></i></span>
                                    <i class="fa-solid fa-check"></i>
                                    With
                                    <strong>AVAILABLE product, you will receive it right away</strong><br>
                                    <i class="fa-solid fa-check"></i>
                                    With
                                    <strong>PRE-ORDER products, you need a deposit of 50% of the product value.</strong>
                                    Goods arrive in Vietnam about 2-3 weeks after release. The expected release date is
                                    as detailed below.
                                </li>
                                <li>
                                    <span class="lazyload"><i class="fa-solid fa-phone"></i></span>
                                    <i class="fa-solid fa-check"></i>
                                    <strong>Door-to-door delivery.</strong><br>
                                    <i class="fa-solid fa-check"></i>
                                    <strong>Free Shipping with orders over >1000K.</strong><br>
                                    <i class="fa-solid fa-check"></i>
                                    <strong>Please inspect your package when you receive it.</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                </a>
                <div class="description">
                    <h3>Description</h3>
                    <p class="detailsection-title">
                        <strong>Update at: <%=product.createdAt %></strong>
                    </p>
                    <p>
                        <%=product.desc%>
                    </p>
                </div>
            </div>
        </div>
    </div>

    </div>
    <script src="/js/productDetail.js"></script>
    <%- include('layout/footer'); -%>