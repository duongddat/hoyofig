<%- include('layout/header.ejs'); -%>
    <div class="full-witch">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100"
                        src="https://theme.hstatic.net/1000160337/1000885200/14/slide_1_img.jpg?v=311"
                        alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                        src="https://theme.hstatic.net/1000160337/1000885200/14/slide_2_img.jpg?v=311"
                        alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                        src="https://theme.hstatic.net/1000160337/1000885200/14/slide_3_img.jpg?v=311"
                        alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                        src="https://theme.hstatic.net/1000160337/1000885200/14/slide_4_img.jpg?v=311"
                        alt="Fourth slide">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row container-products">
                <div class="col-xs-block col-12">
                    <nav class="mobile-category">
                        <ul class="mobile-category__list">
                            <li class="mobile-category__item">
                                <a href="/" class="mobile-category__link">
                                    All products
                                </a>
                            </li>
                            <% categories.map((c, index)=>{ %>
                                <li class="mobile-category__item">
                                    <a href="/product/<%= c.slug %>" class="mobile-category__link">
                                        <%= c.title %>
                                    </a>
                                </li>
                                <% }); %>
                                    <% categories.map((c, index)=>{ %>
                                        <li class="mobile-category__item">
                                            <a href="/product/<%= c.slug %>" class="mobile-category__link">
                                                <%= c.title %>
                                            </a>
                                        </li>
                                        <% }); %>
                        </ul>
                    </nav>
                </div>
                <div class="col-xs-none col-lg-3 col-xl-3">
                    <ul class="form-container">
                        <div class="title-header">
                            <h4 class="ml-4">Product category</h4>
                        </div>
                        <a href="/">
                            <li class="form-item">
                                <i class="fa-regular fa-folder-open mr-2"></i>
                                All products
                            </li>
                        </a>
                        <% categories.map((c, index)=>{ %>
                            <a href="/product/<%= c.slug %>">
                                <li class="form-item">
                                    <i class="fa-regular fa-folder-open mr-2"></i>
                                    <%= c.title %>
                                </li>
                            </a>
                            <% }); %>
                                <div class="form-footer">
                                    <i class="fa-solid fa-window-minimize"></i>
                                </div>
                    </ul>
                </div>
                <div class="col-md-12 col-lg-9 col-xl-9">
                    <div class="row products">
                        <% if (products.length> 0) {%>
                            <% products.map((product, index)=> {%>
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 card-product">
                                    <a href="/product/<%= product.category %>/<%= product.id %>">
                                        <div class="card">
                                            <%if(product.image) {%>
                                                <img class="card-img" src="/img/<%= product.image %>" alt="Card image">
                                                <%} else {%>
                                                    <img class="card-img" src="/img/none-image.jpg" alt="Card image">
                                                    <%}%>
                                                        <div class="card-body">
                                                            <p class="card-detail">
                                                                <%= helper.covertTitle(product.title) %>
                                                            </p>
                                                            <p class="card-price">
                                                                Price: $<%=parseFloat(product.price).toFixed(2)%>
                                                            </p>
                                                        </div>
                                                        <div class="card-action">
                                                            <a href="/cart/add/<%=product.id%>" class="btn-add-cart">
                                                                <div class="card-actions-inner">
                                                                    <i class="fas fa-cart-shopping"></i>
                                                                </div>
                                                            </a>
                                                        </div>
                                        </div>
                                    </a>
                                </div>
                                <%});%>
                                    <%} else {%>
                                        <div class="form-container text-center">
                                            <img src="https://wiki.hoyolab.com/_nuxt/img/mimo-active.a2f170b.png"
                                                alt="Not found">
                                            <p class="not-product-title">~Product Unavailable~</p>
                                        </div>
                                        <%}%>

                    </div>
                    <div class="d-flex justify-content-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="/" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <%for(var i=0; i < size; i++){%>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%=i+ 1%>">
                                            <%=i + 1%>
                                        </a>
                                    </li>
                                    <%}%>
                                        <li class="page-item">
                                            <a class="page-link" href="/" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <%- include('layout/footer'); -%>