<%- include('layout/header.ejs'); -%>
    <div class="full-witch">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100"
                        src="https://theme.hstatic.net/1000160337/1000885200/14/slide_1_img.jpg?v=311"
                        alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                        src="https://theme.hstatic.net/1000160337/1000885200/14/slide_2_img.jpg?v=311"
                        alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                        src="https://theme.hstatic.net/1000160337/1000885200/14/slide_3_img.jpg?v=311"
                        alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                        src="https://theme.hstatic.net/1000160337/1000885200/14/slide_4_img.jpg?v=311"
                        alt="Fourth slide">
                </div>
            </div>
        </div>
        <div class="container full-content">
            <div class="row container-products">
                <div class="col-xs-12 col-lg-3 col-xl-3">
                    <ul class="form-container">
                        <div class="title-header">
                            <h4 class="ml-4">Product category</h4>
                        </div>
                        <a href="/">
                            <li class="form-item">
                                <i class="fa-regular fa-folder-open mr-2"></i>
                                All products
                            </li>
                        </a>
                        <% categories.map((c, index)=>{ %>
                            <a href="/products/<%= c.slug %>">
                                <li class="form-item">
                                    <i class="fa-regular fa-folder-open mr-2"></i>
                                    <%= c.title %>
                                </li>
                            </a>
                            <% }); %>
                                <div class="form-footer">
                                    <i class="fa-solid fa-window-minimize"></i>
                                </div>
                    </ul>
                </div>
                <div class="col-md-12 col-lg-9 col-xl-9">
                    <div class="row products">
                        <% products.map((product, index)=> {%>
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 card-product">
                                <div class="card">
                                    <img class="card-img" src="img/<%= product.image %>" alt="Card image">
                                    <div class="card-body">
                                        <p class="card-detail">
                                            <%= helper.covertTitle(product.title) %>
                                        </p>
                                        <p class="card-price">
                                            Price: $<%=parseFloat(product.price).toFixed(2)%>
                                        </p>
                                    </div>
                                    <div class="card-action">
                                        <div class="card-actions-inner">
                                            <p class="preview">View details</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%});%>
                    </div>
                </div>
            </div>
        </div>
        <%- include('layout/footer'); -%>