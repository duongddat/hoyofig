<%- include('../layout/headerDefault.ejs'); -%>
    <div class="backgroud-video">
        <video src="https://genshin.mihoyo.com/_nuxt/videos/3e78e80.mp4" muted autoPlay loop type="video/mp4"></video>
        <div class="login-content">
            <div class="bt-form-login-simple-1">
                <h1 class="form-heading">
                    Register your account
                </h1>
                <div class="text-wrap">
                    <div class="text-line"></div>
                    <p class="text">*</p>
                    <div class="text-line"></div>
                </div>
                <form class="form" method="POST" action="/user/register">
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="text" name="email" id="email" placeholder="Email" class="form-input" />
                    </div>
                    <div class="form-group">
                        <label for="email">Username *</label>
                        <input type="text" name="username" id="username" placeholder="Username" class="form-input" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password *</label>
                        <input type="password" name="password" id="password" placeholder="Password"
                            class="form-input" />
                    </div>
                    <div class="form-group">
                        <label for="password">Confirm Password *</label>
                        <input type="password" name="password2" id="password" placeholder="Confirm Password"
                            class="form-input" />
                    </div>
                    <div class="form-meta">
                        <div class="form-remember">
                            <input type="checkbox" name="remember-account" id="remember-account" />
                            <label for="remember-account">
                                I have read and agree to the <strong>Terms and Service & Privacy
                                    Policy</strong>
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="form-btn">
                        Register
                    </button>
                </form>
                <div class="form-option">
                    Do you have an account?
                    <a href="/user/login">Sign up now~</a>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/footerDefault'); -%>